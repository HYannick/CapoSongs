{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "i18n.ts",
    "unit/**/*.ts", "src/**/*.json"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@cypress/*": ["./cypress/*"],
      "@unit/*": ["./unit/*"]
    }
  }
}
